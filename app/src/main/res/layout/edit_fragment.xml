<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.androidvoyage.zakat.screens.edit.EditViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.edit.EditFragment">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_edit"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:text="Add Nisab"
            android:textColor="@color/primaryDarkColor"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_back"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/back_rect_round_4dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_title_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title_edit" />

        <ScrollView
            android:id="@+id/sv_edit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_edit">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/style_label_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nisab Type" />


                <TextView
                    android:id="@+id/tv_spn_type"
                    style="@style/style_input_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Type"
                    android:text="@{vm.nisabItem.type}" />

                <TextView
                    android:text="@{vm.errorType}"
                    style="@style/TextErrorValidation" />

                <TextView
                    style="@style/style_label_text"
                    visibleIfMetal="@{vm.nisabItem.type}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karat" />

                <TextView
                    android:id="@+id/tv_spn_karat"
                    style="@style/style_input_spinner"
                    visibleIfMetal="@{vm.nisabItem.type}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Karat"
                    android:text="@{vm.nisabItem.purity}" />

                <TextView
                    android:text="@{vm.errorPurity}"
                    style="@style/TextErrorValidation" />

                <TextView
                    style="@style/style_label_text"
                    visibleIfMetal="@{vm.nisabItem.type}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_weight_in_grams_1_tola_10_grams_at_present" />

                <EditText
                    style="@style/style_input_edittext"
                    visibleIfMetal="@{vm.nisabItem.type}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="grams"
                    android:inputType="numberDecimal"
                    android:text="@={vm.nisabItem.weight}" />

                <TextView
                    android:text="@{vm.errorGram}"
                    style="@style/TextErrorValidation" />

                <TextView
                    style="@style/style_label_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <EditText
                    style="@style/style_input_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:text="@={vm.nisabItem.name}" />

                <TextView
                    android:text="@{vm.errorName}"
                    style="@style/TextErrorValidation" />

                <TextView
                    style="@style/style_label_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost / Price" />

                <EditText
                    style="@style/style_input_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cost / Price"
                    android:inputType="numberDecimal"
                    android:text="@={vm.nisabItem.price}" />

                <TextView
                    android:text="@{vm.errorCost}"
                    style="@style/TextErrorValidation" />

                <TextView
                    style="@style/style_label_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated Zakat"
                    android:visibility="gone" />

                <TextView
                    style="@style/style_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:text="â‚¹10,000" />

            </LinearLayout>
        </ScrollView>


        <View
            android:id="@+id/view_shadow"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@drawable/back_shadow_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sv_edit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>